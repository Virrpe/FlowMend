# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_from_partners_dashboard
SHOPIFY_API_SECRET=your_api_secret_from_partners_dashboard
SHOPIFY_SCOPES=read_products,write_products
SHOPIFY_APP_URL=https://your-app-url.com
SHOPIFY_API_VERSION=2024-10

# Database (PostgreSQL for both dev and production)
# For local dev with docker-compose:
DATABASE_URL=postgresql://flowmend:flowmend_dev@localhost:5432/flowmend

# For production (Railway auto-sets this):
# DATABASE_URL=postgresql://user:password@host:5432/flowmend

# Redis (BullMQ Job Queue)
# For local dev with Docker Redis:
REDIS_URL=redis://localhost:6379

# For production with Upstash/Redis Cloud:
# REDIS_URL=rediss://default:password@host:6379

# Encryption
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# App Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Optional: Shopify CLI tunnel
# SHOPIFY_CLI_TUNNEL=true
